          {
            "name": "leagueData",
            "source": ["1-bundesliga", "liga-nos", "ligue-1", "premier-league", "primera-division", "serie-a"]
          }
        ],
  
        "scales": [
            {
              "name": "xscale", "type": "band",
              "domain": {"data": "leagueData", "field": "league_name"},
              "range": "width"
            },
            {
              "name": "yscale", "type": "linear",
              "domain": [0, 24000],
              "range": "height",
              "nice": true,
              "round": true
            },
            {
                "name": "color",
                "type": "ordinal",
                "domain": [
                  "1 Bundesliga",
                  "Liga Nos",
                  "Ligue 1",
                  "Premier League",
                  "Primera Division",
                  "Serie A"
                ],
                "range": [
                  "#E69F00",
                  "#56B4E9",
                  "#009E73",
                  "#0072B2",
                  "#D55E00",
                  "#CC79A7"
                ]
              }
          ],
        
          "axes": [
            {"orient": "left", "grid": true, "scale": "yscale"},
            {"orient": "bottom", "grid": true, "scale": "xscale"}
          ],

          "legends": [
            {
              "stroke": "color",
              "title": "Origin",
              "encode": {
                "symbols": {
                  "name": "legendSymbol",
                  "interactive": true,
                  "update": {
                    "fill": { "value": "transparent" },
                    "strokeWidth": { "value": 2 },
                    "opacity": [
                      {
                        "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                        "value": 0.7
                      },
                      { "value": 0.15 }
                    ],
                    "size": { "value": 64 }
                  }
                },
                "labels": {
                  "name": "legendLabel",
                  "interactive": true,
                  "update": {
                    "opacity": [
                      {
                        "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                        "value": 1
                      },
                      { "value": 0.25 }
                    ]
                  }
                }
              }
            }
          ],
        
          "marks": [
            {
              "type": "rect",
              "from": {"data": "leagueData"},
              "encode":{
                "enter": {
                  "x": {"scale": "xscale", "band": 0.2, "field": "league_name"},
                  "width": {"scale": "xscale", "band": 0.6},
                  "fill": { "scale": "color", "field": "league_name" }
                },
                "update": {
                  "y": {"scale": "yscale", "field": "total_fee_cleaned"},
                  "y2": {"scale": "yscale", "value": 0}
                },
                "hover": {
                    "tooltip": {"signal": "{'Total Transfer Fee': datum.total_fee_cleaned + ' Million €', 'League': datum.league_name, 'Period': yearMin + ' - ' + yearMax}"}
                }
              }
            }
          ]
