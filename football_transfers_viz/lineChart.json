{
  "€schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot example depicting automobile statistics.",
  "width": 1200,
  "height": 300,
  "padding": 5,
  "title": "Leagues Total Transfer Fees Each Year",
  "signals": [
    {
      "name": "yearMin",
      "value": "1992"
    },
    {
      "name": "yearMax",
      "value": "2023"
    },
    {
      "name": "transferInOut",
      "value": "in"
    },
  
    {
      "name": "clear",
      "value": true,
      "on": [
        {
          "events": "pointerup[!event.item]",
          "update": "true",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": null,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "{value: datum.value}",
          "force": true
        }
      ]
    }
  ],

  "data": [
    {
      "name": "1-bundesliga",
      "url": "/data/1-bundesliga.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "filter",
          "expr": "datum.transfer_movement === transferInOut"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric <= yearMax"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric >= yearMin"
        },
        {
          "type": "aggregate",
          "groupby": ["year_numeric"],
          "fields": ["fee_cleaned"],
          "ops": ["sum"],
          "as": ["total_fee_cleaned"]
        },
        {
          "type": "formula",
          "as": "total_fee_cleaned",
          "expr": "format(datum.total_fee_cleaned, ',.2f')"
        }
      ]
    },

    {
      "name": "selected",
      "on": [
        { "trigger": "clear", "remove": true },
        { "trigger": "clicked", "toggle": "clicked" }
      ]
    },

