{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A top-k bar chart ranking film directors by revenue.",
  "width": 500,
  "height": 410,
  "padding": 5,
  "autosize": "fit",

  "signals": [
    {
      "name": "k", "value": 5,
      "bind": {"input": "select", "options": [5, 10, 20, 30]}
    },
    {
      "name": "op", "value": "average",
      "bind": {"input": "select", "options": ["average", "median", "sum"]}
    },
    { "name": "clubName", "value": "" },
    {
      "name": "yearMin",
      "value": "1992"
    },
    {
      "name": "yearMax",
      "value": "2023"
    },
    {
      "name": "transferInOut",
      "value": "in"
    }

  ],

  "title": {
    "text": "HELLO",
    "anchor": "start",
    "frame": "group"
  },

  "data": [
    {
      "name": "directors",
      "url": "/data/1-bundesliga.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "filter",
          "expr": "datum.club_name === clubName"
        },
        {
          "type": "filter",
          "expr": "datum.transfer_movement === transferInOut"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric <= yearMax"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric >= yearMin"
        }
      ]
    },
    {
      "name": "ranks",
      "source": "directors",
      "transform": [
        {
          "type": "window",
          "sort": {"field": "fee_cleaned", "order": "descending"},
          "ops": ["row_number"], "as": ["rank"]
        },
        {
          "type": "collect",
          "sort": {"field": "rank", "order": "ascending"}
        },
        {
          "type": "filter",
          "expr": "datum.rank <= k"
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "ranks"},
      "encode": {
        "update": {
          "x": {"scale": "x", "value": 0},
          "x2": {"scale": "x", "field": "fee_cleaned"},
          "y": {"scale": "y", "field": "player_name"},
          "height": {"scale": "y", "band": 1}
        },
        "hover": {
          "tooltip": {"signal": "datum"}
        }
      }
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "ranks", "field": "fee_cleaned"},
      "range": "width",
      "nice": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "ranks", "field": "player_name"
      },
      "range": "height",
      "padding": 0.1
    }
  ],

  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "format": "d",
      "tickCount": 5,
      "title": "Transfer Fee (Million EUR)"
    },
    {
      "scale": "y",
      "orient": "left",
      "title": "Player name"
    }
  ]
}