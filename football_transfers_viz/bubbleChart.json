{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A top-k bar chart ranking film directors by revenue.",
  "width": 480,
  "height": 600,
  "padding": 5,
  "autosize": "fit",

  "signals": [
    {
      "name": "k", "value": 5,
      "bind": {"input": "range", "min": 5, "max": 50, "step": 1}
    },
    {
      "name": "sortOrder", "value": "descending",
      "bind": {"input": "select", "options": [ "descending", "ascending"]}
    },
    { "name": "clubName", "value": "" },
    {
      "name": "yearMin",
      "value": "1992"
    },
    {
      "name": "yearMax",
      "value": "2023"
    },
    {
      "name": "transferInOut",
      "value": "in"
    }
  ],

  "title": {
    "text": {"signal": "clubName + ' top transfered players by fee ' + yearMin + ' - ' + yearMax"},
    "anchor": "start",
    "frame": "group"
  },

  "data": [
    {
      "name": "directors",
      "url": "/data/1-bundesliga.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "filter",
          "expr": "datum.fee_cleaned != 'NA'"
        },
        {
          "type": "filter",
          "expr": "datum.club_name == clubName"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "formula",
          "as": "fee_numeric",
          "expr": "toNumber(datum.fee_cleaned)"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric <= yearMax"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric >= yearMin"
        },
        {
          "type": "filter",
          "expr": "datum.transfer_movement == transferInOut"
        },
        {
          "type": "window",
          "sort": {"field": "fee_numeric", "order": {"signal": "sortOrder"}},
          "ops": ["row_number"], "as": ["rank"]
        },
        {
          "type": "filter",
          "expr": "datum.rank <= k"
        }
      ]
    }
  ],

  "marks": [
    {
      "name": "rect",
      "type": "rect",
      "from": {"data": "directors"},
      "encode": {
        "update": {
          "x": {"scale": "x", "value": 0},
          "x2": {"scale": "x", "field": "fee_numeric"},
          "y": {"scale": "y", "field": "player_name"},
          "height": {"scale": "y", "band": 1}
        },
        "hover": {
          "tooltip": [
            {
              "signal": "{'Player name': datum.player_name, 'Transfered/loaned from': datum.club_involved_name, 'Transfered/loaned to': datum.club_name, 'Transfer year' : datum.year_numeric, 'Price' : datum.fee_numeric + ' Million â‚¬'}"
          }
        ]
        }
      }
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {"data": "directors", "field": "fee_numeric"},
      "range": "width",
      "nice": true
    },
    {
      "name": "y",
      "type": "band",
      "domain": {
        "data": "directors", "field": "player_name",
        "sort": {"op": "max", "field": "fee_numeric", "order": {"signal": "sortOrder"}}
      },
      "range": "height",
      "padding": 0.1
    }
  ],

  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "title": "Transfer Fee (Million EUR)",
      "grid": true
    },
    {
      "scale": "y",
      "orient": "left"
    }
  ]
}