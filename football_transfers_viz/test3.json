{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "Player Transfers compared",
  "width": 400,
  "height": 650,
  "background": "grey",
  "padding": { "top": 60, "bottom": 0 },
  "autosize": "none",
  "signals": [
    { "name": "cx", "update": "width / 2" },
    { "name": "cy", "update": "height / 2" },
    { "name": "clubName", "value": "" }
  ],
  "data": [
    {
      "name": "leagueData",
      "url": "/data/primera-division.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "formula",
          "as": "fee_numeric",
          "expr": "format(datum.fee_cleaned, ',.0f')"
        },
        {
          "type": "filter",
          "expr": "datum.club_name === clubName"
        },
        {
          "type": "filter",
          "expr": "datum.transfer_movement === 'in'"
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "size",
      "domain": { "data": "leagueData", "field": "fee_cleaned" },
      "range": [300, 800]
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "leagueData", "field": "player_name" },
      "range": { "scheme": "category20" }
    }
  ],
  "marks": [
    {
      "name": "nodes",
      "type": "symbol",
      "from": { "data": "leagueData" },
      "encode": {
        "enter": {
          "fill": { "scale": "color", "field": "player_name" },
          "xfocus": { "signal": "cx" },
          "yfocus": { "signal": "cy" }
        },
        "update": {
          "size": {
            "signal": "pow(2 * datum.fee_cleaned, 2)",
            "scale": "size"
          },
          "stroke": { "value": "black" },
          "strokeWidth": { "value": 1 },
          "tooltip": {
            "signal": "{'Player': datum.player_name, 'Age': datum.age, 'Transfer fee' : datum.fee, 'Bought/loaned from' : datum.club_involved_name}"
          }
        }
      },
      "transform": [
        {
          "type": "force",
          "iterations": 100,
          "static": false,
          "forces": [
            {
              "force": "collide",
              "iterations": 2,
              "radius": { "expr": "sqrt(datum.size) / 2" }
            },
            {
              "force": "center",
              "x": { "signal": "cx" },
              "y": { "signal": "cy" }
            },
            {
              "force": "x",
              "x": "xfocus",
              "strength": 0.2
            },
            {
              "force": "y",
              "y": "yfocus",
              "strength": 0.1
            }
          ]
        }
      ]
    },
    {
      "type": "text",
      "from": { "data": "nodes" },
      "encode": {
        "enter": {
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fontSize": { "value": 10 },
          "fontWeight": { "value": "bold" },
          "fill": { "value": "black" },
          "text": { "field": "datum.player_name" }
        },
        "update": { "x": { "field": "x" }, "y": { "field": "y" } }
      }
    }
  ]
}
