        }
      ]
    },
    {
      "name": "treeData",
      "source": [
        "1-bundesliga",
        "liga-nos",
        "ligue-1",
        "premier-league",
        "primera-division",
        "serie-a"
      ],
      "transform": [
        {
          "type": "nest",
          "keys": ["league_name"],
          "generate": { "signal": "true" }
        },
        {
          "type": "treemap",
          "round": true,
          "field": "total_fee_cleaned",
          "sort": { "field": "total_fee_cleaned" },
          "method": "binary",
          "size": [{ "signal": "width" }, { "signal": "height" }]
        }
      ]
    },
    {
      "name": "nodes",
      "source": "treeData",
      "transform": [{ "type": "filter", "expr": "datum.children" }]
    },
    {
      "name": "leaves",
      "source": "treeData",
      "transform": [{ "type": "filter", "expr": "!datum.children" }]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "range": [
        "#E69F00",
        "#56B4E9",
        "#009E73",
        "#0072B2",
        "#D55E00",
        "#CC79A7"
      ]
    },
    {
      "name": "size",
      "type": "ordinal",
      "domain": [0, 1, 2, 3],
      "range": [256, 28, 20, 14]
    },
    {
      "name": "opacity",
      "type": "ordinal",
      "domain": [0, 1, 2, 3],
      "range": [0.15, 0.5, 0.8, 1]
    }
  ],
  "legends": [
    {
      "stroke": "color",
      "title": "League name",
      "padding": 4,
      "encode": {
        "symbols": {
          "enter": { "strokeWidth": { "value": 2 }, "size": { "value": 50 } }
        }
      }
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": { "data": "nodes" },
      "interactive": false,
      "encode": {
        "update": {
          "x": { "field": "x0" },
          "y": { "field": "y0" },
          "x2": { "field": "x1" },
          "y2": { "field": "y1" }
        }
      }
    },
    {
      "type": "rect",
      "from": { "data": "leaves" },
      "encode": {
        "enter": { "stroke": { "value": "black" } },
        "update": {
          "x": { "field": "x0" },
          "y": { "field": "y0" },
          "x2": { "field": "x1" },
          "y2": { "field": "y1" },
          "fill": { "scale": "color", "field": "league_name" }
        },
        "hover": {
          "fill": { "value": "grey" },
          "tooltip": [
            {
              "test": "transferInOut == 'out'",
              "signal": "{'Club name': datum.club_name, 'Plays in': datum.league_name,'Money Recieved' : datum.total_fee_cleaned + ' Million €'}"
            },
            {
            "signal": "{'Club name': datum.club_name, 'Plays in': datum.league_name,'Money Spent' : datum.total_fee_cleaned + ' Million €'}"
          }
        ]
        }
      }
    }
  ]
