  "scales": [
    {
      "name": "x",
      "type": "band",
      "round": true,
      "domain": { "data": "serie-a", "field": "year_numeric" },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": { "data": "premier-league", "field": "total_fee_cleaned" },
      "range": "height"
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Bundesliga",
        "Liga Nos",
        "Ligue 1",
        "Premier League",
        "La Liga",
        "Serie A"
      ],
      "range": [
        "#a6cee3",
        "#33a02c",
        "#fb9a99",
        "#e31a1c",
        "#ff7f00",
        "#cab2d6"
      ]
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 10,
      "labelOverlap": "parity",
      "title": "Tranfer Year"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Transfer Fee (Million EUR)"
    }
  ],

  "legends": [
    {
      "stroke": "color",
      "title": "Origin",
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "fill": { "value": "transparent" },
            "strokeWidth": { "value": 2 },
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 0.7
              },
              { "value": 0.15 }
            ],
            "size": { "value": 64 }
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              },
              { "value": 0.25 }
            ]
          }
        }
      }
    }
  ],

  "marks": [
    {
      "name": "1-bundesliga-marks",
      "type": "line",
      "from": { "data": "1-bundesliga" },
      "encode": {
        "update": {
          "x": { "scale": "x", "field": "year_numeric" },
          "y": { "scale": "y", "field": "total_fee_cleaned" },
          "shape": { "value": "circle" },
          "strokeWidth": { "value": 2 },
          "opacity": { "value": 0.5 },
          "stroke": { "value": "#a6cee3" },
          "fill": { "value": "transparent" }
        }
      }
    },
    {
      "type": "symbol",
      "from": { "data": "1-bundesliga" },
      "encode": {
        "update": {
          "tooltip": {
            "signal": "{'Spending': datum.total_fee_cleaned + ' Million $', 'League': 'Bundesliga'}"
          },
          "x": { "scale": "x", "field": "year_numeric" },
          "y": { "scale": "y", "field": "total_fee_cleaned" },
          "shape": { "value": "circle" },
          "strokeWidth": { "value": 2 },
          "stroke": { "value": "#a6cee3" },
          "fill": { "value": "#a6cee3" }
