
{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A basic scatter plot example depicting automobile statistics.",
  "width": 1080,
  "height": 300,
  "padding": 5,

  "signals": [
    {
      "name": "year", "value": "2000",
      "bind": {"input": "range", "min": 1992, "max": 2023, "step": 1}
    }
  ],


  "data": [
    {
      "name": "source",
      "url": "/data/eredivisie.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "filter",
          "expr": "datum.club_name == 'Ajax Amsterdam'"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric <= year"
        }
      ]
    },
    {
      "name": "summaryData",
      "source": "source",
      "transform": [{
        "type": "aggregate",
        "fields": ["fee_cleaned"],
        "ops": ["sum"],
        "as": ["total_fee_cleaned"]
      }
      ]
    }
  ],

  "scales": [
    {
      "name": "x",
      "type": "band",
      "round": true,
      "domain": { "data": "source", "field": "year" },
      "range": "width"
    },
    {
      "name": "y",
      "type": "linear",
      "round": true,
      "nice": true,
      "zero": true,
      "domain": { "data": "source", "field": "fee_cleaned" },
      "range": "height"
    }
  ],

  "axes": [
    {
      "scale": "x",
      "grid": true,
      "domain": false,
      "orient": "bottom",
      "tickCount": 10,
      "labelOverlap": "parity",
      "title": "Tranfer Year"
    },
    {
      "scale": "y",
      "grid": true,
      "domain": false,
      "orient": "left",
      "titlePadding": 5,
      "title": "Transfer Fee (Million EUR)"
    }
  ],
  "marks": [
    {
      "name": "dots",
      "type": "line",
      "from": { "data": "source" },
      "encode": {
        "update": {
          "x": { "scale": "x", "field": "year" },
          "y": { "scale": "y", "field": "total_fee_cleaned" },
          "shape": { "value": "circle" },
          "strokeWidth": { "value": 2 },
          "opacity": { "value": 0.5 },
          "stroke": { "value": "#4682b4" },
          "fill": { "value": "transparent" }
        }
      }
    },
    {
      "name": "text",
      "type": "text",
      "from": { "data": "dots" },
      "encode": {
        "update": {
          "x": { "field": "x" },
          "y": { "field": "y", "offset": -10 },
          "text": { "field": "year" },
          "fontSize": { "value": 12 },
          "align": { "value": "center" },
          "baseline": { "value": "bottom" }
        }
      }
    }
  ]
}
