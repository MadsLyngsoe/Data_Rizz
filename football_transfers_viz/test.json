  "data": [
    {
      "name": "1-bundesliga",
      "url": "/data/1-bundesliga.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum.fee_cleaned > 0"
        },
        {
          "type": "formula",
          "as": "year_numeric",
          "expr": "toNumber(datum.year)"
        },
        {
          "type": "filter",
          "expr": "datum.year_numeric <= year"
        },
        {
          "type": "formula",
          "as": "fee_numeric",
          "expr": "format(datum.fee_cleaned, ',.0f')"
        },
        {
          "type": "aggregate",
          "groupby": ["year_numeric"],
          "fields": ["fee_numeric"],
          "ops": ["sum"],
          "as": ["total_fee_cleaned"]
        }
      ]
    },

